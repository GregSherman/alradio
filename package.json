{
  "name": "alradio-server",
  "version": "0.1.0",
  "description": "AL Radio, the community driven, AL powered broadcast!",
  "private": true,
  "type": "module",
  "scripts": {
    "setup-audio": "mkdir -p ./audio && rm -rf ./audio/*",
    "start:local": "npm run setup-audio && node --expose-gc --env-file=.env src/index.js",
    "start": "npm run setup-audio && node --expose-gc --optimize_for_size --max_old_space_size=460 src/index.js",
    "mongo:local": "mkdir -p db && mongod --dbpath db --port 28017",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,json,css,md}\""
  },
  "dependencies": {
    "axios": "^1.7.3",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "ffprobe": "^1.1.2",
    "ffprobe-static": "^3.1.0",
    "fluent-ffmpeg": "^2.1.3",
    "https-proxy-agent": "^7.0.5",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.8.0",
    "mongoose": "^8.5.4",
    "openai": "^4.55.5",
    "styled-components": "^6.1.12",
    "throttle": "^1.0.3",
    "warn": "^1.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.0",
    "dotenv-cli": "^7.4.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.9.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3"
  }
}
